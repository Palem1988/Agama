{
  "name": "agama",
  "productName": "Agama",
  "version": "0.5.6",
  "description": "Verus-Enhanced Agama Wallet Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir agama-unpacked",
    "dist": "electron-builder --publish=never ",
    "dist-win": "electron-builder --publish=never  --win",
    "test": "mocha"
  },
  "repository": "https://github.com/KomodoPlatform/Agama/",
  "homepage": "http://komodoplatform.com",
  "keywords": [
    "agama",
    "SuperNET",
    "komodo",
    "multicoin",
    "wallet",
    "spv",
    "jumblr"
  ],
  "author": {
    "name": "Komodo Platform Team",
    "email": "info@komodoplatform.com",
    "url": "https://komodoplatform.com"
  },
  "license": "MIT",
  "build": {
    "appId": "Agama",
    "asarUnpack": [
      "node_modules"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!assets{/*}",
      "!test${/*}",
      "!windeps${/*}",
      "!.git*",
      "!Brewfile",
      "!README.md",
      "!make*",
      "!check_submodule.sh",
      "!gui/EasyDEX/react/node_modules${/*}",
      "!gui/EasyDEX/react/src${/*}",
      "!gui/EasyDEX/react/www${/*}"
    ],
    "extraResources":
    [
      "assets"
    ],
    "mac": {
      "icon": "assets/icons/agama_icons/agama_app_icon.icns",
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "dmg": {
      "background": "assets/backgrounds/trianglify-8.png",
      "icon": "assets/icons/agama_icons/agama_app_icon.icns",
      "contents": [
        {
          "x": 192,
          "y": 344
        },
        {
          "x": 448,
          "y": 344,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/agama_icons",
      "desktop": {
        "Encoding": "UTF-8"
      },
      "target": [
        "appimage"

      ]
    },
    "deb": {
      "depends": [
        "libgomp1",
        "libcurl4-openssl-dev",
        "libgconf2-4"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/agama_app_icon.ico"
    }
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "electron": "4.0.4",
    "electron-builder": "^20.38.5",
    "electron-builder-squirrel-windows": "20.38.5",
    "jquery": "^3.3.1",
    "mocha": "^5.2.0",
    "spectron": "^3.8.0"
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "agama-wallet-lib": "git+https://github.com/VerusCoin/agama-wallet-lib.git",
    "arch": "^2.1.0",
    "async": "^2.6.0",
    "bigi": "^1.4.2",
    "bip39": "^2.5.0",
    "bitcoinforksjs-lib": "git://github.com/SuperNETorg/bitcoinjs-lib.git#opt-in-bitcoincash-sighash",
    "bitcoinjs-lib": "git://github.com/SuperNETorg/bitcoinjs-lib.git",
    "bitcoinjs-lib-pos": "git://github.com/KomodoPlatform/bitcoinjs-lib-pos.git",
    "bitcoinjs-lib-zcash": "git://github.com/pbca26/bitcoinjs-lib.git#zcash",
    "bitgo-utxo-lib": "git+https://github.com/miketout/bitgo-utxo-lib.git",
    "bluebird": "^3.4.7",
    "body-parser": "^1.15.2",
    "buffer-reverse": "^1.0.1",
    "coinselect": "github:bitcoinjs/coinselect",
    "express": "^4.14.0",
    "fix-path": "^2.1.0",
    "fs-extra": "^4.0.2",
    "graceful-fs": "^4.1.11",
    "iocane": "^1.0.0",
    "js-sha256": "^0.7.1",
    "marketmaker": "git://github.com/pbca26/marketmaker.git",
    "nodejs-aes256": "^1.0.1",
    "passwd-strength": "git+https://github.com/pbca26/passwd-strength.git",
    "portscanner": "^2.1.1",
    "ps-node": "^0.1.5",
    "remote-file-size": "^3.0.5",
    "request": "^2.80.0",
    "sha256": "^0.2.0",
    "socket.io": "^2.2.0",
    "test": "^0.6.0",
    "tx-decoder": "git://github.com/pbca26/tx-decoder.git",
    "webpack": "^4.16.0",
    "wif": "^2.0.6"
  }
}